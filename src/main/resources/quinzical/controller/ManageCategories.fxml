<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quinzical.controller.ManageCategories">
   <children>
      <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Manage Custom Categories" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Label>
            <AnchorPane VBox.vgrow="ALWAYS">
               <children>
                  <HBox spacing="16.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <AnchorPane styleClass="panel" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <TableView fx:id="categoryTable" editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                       <columns>
                                          <TableColumn fx:id="categoryNameCol" prefWidth="75.0" text="Category" />
                                          <TableColumn fx:id="categoryQCountCol" editable="false" prefWidth="30.0" text="# Questions" />
                                       </columns>
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                    <ButtonBar prefHeight="40.0" prefWidth="200.0">
                                       <buttons>
                                          <Button mnemonicParsing="false" onAction="#LoadCategoryFromFile" text="Load from file..." />
                                          <Button mnemonicParsing="false" onAction="#createCategory" text="New Category" />
                                       </buttons>
                                    </ButtonBar>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" styleClass="panel" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <TableView fx:id="questionTable" editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                       <columns>
                                          <TableColumn fx:id="qQuestionCol" prefWidth="75.0" text="Question" />
                                          <TableColumn fx:id="qAnswerCol" prefWidth="75.0" text="Answer" />
                                          <TableColumn fx:id="qValCol" prefWidth="75.0" text="Value" />
                                       </columns>
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                    <ButtonBar maxHeight="40.0" prefHeight="40.0" prefWidth="200.0">
                                       <buttons>
                                          <Button fx:id="addQButton" disable="true" mnemonicParsing="false" onAction="#newQuestion" text="New Question..." />
                                          <Button fx:id="removeQButton" disable="true" mnemonicParsing="false" onAction="#deleteSelectedQuestion" text="Delete Question" />
                                          <Button fx:id="removeCButton" disable="true" mnemonicParsing="false" onAction="#deleteCategory" text="Delete Category" />
                                       </buttons>
                                       <VBox.margin>
                                          <Insets right="5.0" />
                                       </VBox.margin>
                                    </ButtonBar>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="32.0" left="32.0" right="32.0" top="16.0" />
               </VBox.margin>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
