<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quinzical.controller.MainMenuController">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Region layoutX="10.0" layoutY="91.0" prefHeight="75.0" prefWidth="600.0" VBox.vgrow="ALWAYS" />
            <Label text="Welcome to Quinzical!" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region prefHeight="50.0" prefWidth="600.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="8.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="buttonGame" mnemonicParsing="false" onAction="#handleGameButtonClick" text="Play Game">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="buttonPractice" mnemonicParsing="false" onAction="#handlePracticeButtonClick" text="Practice">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Region layoutX="10.0" layoutY="174.0" prefHeight="75.0" prefWidth="600.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" layoutX="10.0" layoutY="199.0" spacing="8.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Speech Speed">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Region />
                  <Slider fx:id="sliderSpeed" max="240.0" min="80.0" onValueChange="#handleSpeechSpeedSliderChange" value="160.0" />
                  <Slider fx:id="sliderVolume" max="200.0" min="0.0" onValueChange="#handleSpeechVolumeSliderChange" value="100.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </HBox>
         </children>
         <stylesheets>
            <URL value="@../resources/css/style.css" />
        </stylesheets>
      </VBox>
   </children>
</AnchorPane>
